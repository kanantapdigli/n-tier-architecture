@using Web.ViewModels.Tag
@model TagAddCategoriesVM

<form asp-action="addcategories" asp-controller="tag" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="TagId" />
    <div class="form-group">
        <label class="d-block" asp-for="CategoriesIds"></label>
        <select multiple asp-for="CategoriesIds" asp-items="Model.Categories"></select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Add</button>
    </div>
</form>

